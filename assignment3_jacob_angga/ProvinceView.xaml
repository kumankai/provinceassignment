        <VerticalStackLayout
            Padding="20">
            <Label 
                Text="Selected Province"
                HorizontalOptions="Center"
                FontSize="24"
                Margin="10"/>

            <Label
                x:Name="pname"
                Text=""
                HorizontalOptions="Center"
                FontSize="24"
                Margin="10"/>
            <Label
                x:Name="pcapital"
                Text=""
                HorizontalOptions="Center"
                FontSize="24"
                Margin="10"/>
            <Image
                x:Name="pflag"
                Margin="100"
                Scale="2"/>
            <Label
                Text="By Jacob 991697029"
                HorizontalOptions="Center"
                FontSize="18"
                Margin="20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
